{
  "restartable": "rs",
  "ignore": [".git", "node_modules/**/node_modules"],
  "verbose": true,
  "execMap": {
    "ts": "node --inspect=9229 ./node_modules/.bin/ts-node --project tsconfig.node.json"
  },
  "watch": ["src/"],
  "env": {
    "NODE_ENV": "development"
  },
  "inspect": true,
  "ext": "js,json,ts"
}
